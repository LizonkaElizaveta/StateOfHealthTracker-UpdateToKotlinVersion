<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:text="@string/text_reminder"
                android:textColor="@color/MainTextColor"
                android:textSize="@dimen/text_category_size"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="@id/text_day"
                app:layout_constraintTop_toTopOf="parent" />

        <View
                android:id="@+id/line1"
                style="@style/LineStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_reminder" />

        <ImageView
                android:id="@+id/img_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1" />

        <TextView
                android:id="@+id/text_day"
                style="@style/NotificationsSettingsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/text_day"
                app:layout_constraintBottom_toBottomOf="@id/img_time"
                app:layout_constraintStart_toEndOf="@id/img_time"
                app:layout_constraintTop_toTopOf="@id/img_time" />

        <TextView
                android:id="@+id/text_time"
                style="@style/NotificationsSettingsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="@string/text_time"
                app:layout_constraintBottom_toBottomOf="@id/img_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_time" />

        <View
                android:id="@+id/line2"
                style="@style/LineStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/text_day" />

        <ImageView
                android:id="@+id/img_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_repeat"
                app:layout_constraintStart_toStartOf="@id/img_time"
                app:layout_constraintTop_toBottomOf="@id/line2" />

        <TextView
                android:id="@+id/text_repeat"
                style="@style/NotificationsSettingsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_repeat"
                app:layout_constraintBottom_toBottomOf="@id/img_repeat"
                app:layout_constraintStart_toStartOf="@id/text_day"
                app:layout_constraintTop_toTopOf="@id/img_repeat" />

        <TextView
                android:id="@+id/text_toggle"
                style="@style/NotificationsSettingsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/text_day"
                app:layout_constraintStart_toStartOf="@id/text_day"
                app:layout_constraintTop_toBottomOf="@id/text_repeat" />

        <Switch
                android:id="@+id/btn_toggle"
                style="@style/MySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="@id/text_toggle"
                app:layout_constraintEnd_toEndOf="@id/text_time"
                app:layout_constraintTop_toTopOf="@id/text_toggle" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/btn_toggle"
                app:layout_constraintStart_toStartOf="@id/text_toggle"
                app:layout_constraintTop_toBottomOf="@id/text_toggle">

            <CheckBox
                    android:id="@+id/ch_monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/icons_days_marginEnd"
                    android:button="@drawable/ic_monday" />

            <CheckBox
                    android:id="@+id/ch_tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/icons_days_marginEnd"
                    android:button="@drawable/ic_tuesday" />

            <CheckBox
                    android:id="@+id/ch_wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/icons_days_marginEnd"
                    android:button="@drawable/ic_wednesday" />

            <CheckBox
                    android:id="@+id/ch_thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/icons_days_marginEnd"
                    android:button="@drawable/ic_thursday" />

            <CheckBox
                    android:id="@+id/ch_friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/icons_days_marginEnd"
                    android:button="@drawable/ic_friday" />

            <CheckBox
                    android:id="@+id/ch_saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/icons_days_marginEnd"
                    android:button="@drawable/ic_saturday" />

            <CheckBox
                    android:id="@+id/ch_sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/icons_days_marginEnd"
                    android:button="@drawable/ic_sunday" />

        </LinearLayout>

        <Button
                android:id="@+id/btn_save"
                style="@style/MyButtonStyle"
                android:layout_width="@dimen/btn_save_layout_width"
                android:text="@string/text_save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>