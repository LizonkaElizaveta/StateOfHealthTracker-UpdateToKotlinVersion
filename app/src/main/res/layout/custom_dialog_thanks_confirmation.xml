<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:orientation="vertical"
                  android:background="@drawable/shape_curve">

        <TextView
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/dialogHeadline_thanks-confirmation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_curve"
                style="@style/MyTextViewStyle"
                android:textColor="@color/colorDialogTextHeadline"/>

    </LinearLayout>

    <LinearLayout
            android:background="@color/colorDialogMainArea"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginTop="40dp"
                android:layout_marginBottom="32dp"
                android:id="@+id/dialogText_thanks-confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyTextViewStyle"
                android:textColor="@color/colorDialogTextView"/>

        <Button android:id="@+id/dialogButton_next"
                android:textAllCaps="false"
                android:textColor="@color/colorDialogTextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:text="@string/dialogButton_next"
                android:background="?android:attr/selectableItemBackground"/>

    </LinearLayout>

</LinearLayout>