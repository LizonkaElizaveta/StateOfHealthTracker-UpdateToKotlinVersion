<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="notification"
                type="stanevich.elizaveta.stateofhealthtracker.notification.database.Notifications" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/ivNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_material_8"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_notification_doctor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_material_8"
                android:textColor="@color/MainTextColor"
                android:textSize="@dimen/text_recycler_category_size"
                app:layout_constraintBottom_toTopOf="@id/tvNotificationDate"
                app:layout_constraintStart_toEndOf="@+id/ivNotification"
                app:layout_constraintTop_toTopOf="@+id/ivNotification"
                app:notificationTime="@{notification}"
                tools:text="Прием у врача" />

        <TextView
                android:id="@+id/tvNotificationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/ivNotification"
                app:layout_constraintStart_toStartOf="@+id/tvCategory"
                app:layout_constraintTop_toBottomOf="@+id/tvCategory"
                app:notificationCategory="@{notification}"
                tools:text="Ежедневно в 14:30" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>