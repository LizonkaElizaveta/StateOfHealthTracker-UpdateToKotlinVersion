<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/line3"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/tv_support"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@drawable/selected_state"
                android:clickable="false"
                android:drawableStart="@drawable/ic_headset"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingStart="17dp"
                android:paddingEnd="17dp"
                android:text="@string/text_support_users"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line3" />

        <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/tv_support"/>

        <TextView
                android:id="@+id/tv_policy"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@drawable/selected_state"
                android:clickable="false"
                android:drawableStart="@drawable/ic_policy"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingStart="17dp"
                android:paddingEnd="17dp"
                android:text="@string/text_support_policy"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line" />


        <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_policy"/>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>